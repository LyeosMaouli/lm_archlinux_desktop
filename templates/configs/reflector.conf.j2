# Reflector configuration template
# Generated by Ansible for {{ ansible_hostname }}

# Set the output path where the mirrorlist will be saved
--save /etc/pacman.d/mirrorlist

# Select mirrors based on speed
--sort rate

# Use only mirrors that support HTTPS
--protocol https

# Select mirrors that have been recently synchronized
--age {{ mirror_age | default(6) }}

# Number of mirrors to retrieve
--number {{ mirror_count | default(10) }}

{% if mirror_countries is defined and mirror_countries %}
# Restrict mirrors to specific countries
--country {{ mirror_countries | join(',') }}
{% else %}
# Use fastest mirrors globally
--fastest {{ mirror_fastest | default(5) }}
{% endif %}

# Verbose output
--verbose