# Pacman configuration template
# Generated by Ansible for {{ ansible_hostname }}

[options]
HoldPkg = pacman glibc
Architecture = auto
CheckSpace
VerbosePkgLists
ParallelDownloads = {{ pacman_parallel_downloads | default(5) }}
Color
ILoveCandy

# Security settings
SigLevel = Required DatabaseOptional
LocalFileSigLevel = Optional

{% if pacman_ignore_packages is defined and pacman_ignore_packages %}
IgnorePkg = {{ pacman_ignore_packages | join(' ') }}
{% endif %}

{% if pacman_ignore_groups is defined and pacman_ignore_groups %}
IgnoreGroup = {{ pacman_ignore_groups | join(' ') }}
{% endif %}

# Repositories
[core]
Include = /etc/pacman.d/mirrorlist

[extra]
Include = /etc/pacman.d/mirrorlist

{% if enable_multilib | default(false) %}
[multilib]
Include = /etc/pacman.d/mirrorlist
{% endif %}

{% if enable_testing | default(false) %}
[core-testing]
Include = /etc/pacman.d/mirrorlist

[extra-testing]
Include = /etc/pacman.d/mirrorlist
{% endif %}