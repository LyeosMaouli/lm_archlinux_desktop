# Login definitions
# Generated by Ansible - DO NOT EDIT MANUALLY

# Password aging controls
PASS_MAX_DAYS   {{ password_max_age }}
PASS_MIN_DAYS   1
PASS_WARN_AGE   {{ password_warn_age }}

# Min/max values for automatic uid selection
UID_MIN         1000
UID_MAX         60000
SYS_UID_MIN     201
SYS_UID_MAX     999

# Min/max values for automatic gid selection
GID_MIN         1000
GID_MAX         60000
SYS_GID_MIN     201
SYS_GID_MAX     999

# Login timeout
LOGIN_TIMEOUT   {{ login_security.login_timeout }}

# Max members per group entry
MAX_MEMBERS_PER_GROUP   0

# Default umask
UMASK           027

# Home directory permissions
HOME_MODE       0750

# If defined, this command is run when removing a user
USERDEL_CMD     /usr/sbin/userdel_local

# If defined, this command is run when adding a user
USERADD_CMD     /usr/sbin/useradd_local

# Enable logging and display of /var/log/faillog login failure info
FAILLOG_ENAB    yes

# Enable display of unknown usernames when login failures are recorded
LOG_UNKFAIL_ENAB    no

# Enable logging of successful logins
LOG_OK_LOGINS   no

# Enable "syslog" logging of su activity
SYSLOG_SU_ENAB  yes

# Enable "syslog" logging of newgrp activity
SYSLOG_SG_ENAB  yes

# If defined, either full pathname of a file containing device names or
# a ":" delimited list of device names (without the /dev/ prefix)
CONSOLE_GROUPS  floppy:audio:cdrom

# If defined, all su activity is logged to this file
SULOG_FILE      /var/log/sulog

# If defined, file which maps tty line to TERM environment parameter
TTYTYPE_FILE    /etc/ttytype

# If defined, login failures will be logged here in a utmp format
FTMP_FILE       /var/log/btmp

# If defined, the command name to display when running "su -"
SU_NAME         su

# Directory where mailboxes reside
MAIL_DIR        /var/spool/mail

# If defined, this file will be created and updated with user login info
LASTLOG_UID_MAX 1000000

# Enable checking of time restrictions specified in /etc/porttime
PORTTIME_CHECKS_ENAB    yes

# Enable setting of the umask group bits to be the same as owner bits
USERGROUPS_ENAB yes

# Create home directory for new users
CREATE_HOME     yes

# Number of login retries
LOGIN_RETRIES   {{ login_security.login_retries }}

# Delay in seconds before being allowed another attempt after a login failure
FAIL_DELAY      3