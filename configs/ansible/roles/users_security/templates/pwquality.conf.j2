# Password quality configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Minimum password length
minlen = {{ password_min_length }}

# Minimum number of character classes
minclass = 3

# Maximum number of allowed consecutive characters
maxrepeat = 2

# Maximum number of allowed consecutive characters of the same class
maxclassmrepeat = 3

# Reject passwords which contain the user name
usercheck = 1

# Reject passwords which are rotations of the previous password
usersubstr = 0

# Check if password contains at least one digit
dcredit = -1

# Check if password contains at least one uppercase letter
ucredit = -1

# Check if password contains at least one lowercase letter
lcredit = -1

# Check if password contains at least one special character
ocredit = -1

# Minimum number of characters that must be different from old password
difok = 3

# Whether to reject passwords which contain the gecoscheck
gecoscheck = 1

# Dictionary path for password checking
# dictpath = /usr/share/dict/words

# Enable checking for palindromes
palindrome = 1

# Reject passwords which are too similar to the old one
similar = deny