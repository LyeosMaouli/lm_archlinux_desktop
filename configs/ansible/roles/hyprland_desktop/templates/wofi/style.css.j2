/* Wofi styling for Hyprland */
/* Generated by Ansible - DO NOT EDIT MANUALLY */

window {
    margin: 0px;
    border: 2px solid #1e1e2e;
    background-color: #1e1e2e;
    border-radius: 10px;
    font-family: "JetBrains Mono";
}

#input {
    all: unset;
    min-height: 36px;
    padding: 4px 10px;
    margin: 4px;
    border: none;
    color: #cdd6f4;
    font-weight: bold;
    background-color: #11111b;
    border-radius: 8px;
    outline: none;
    border: 1px solid #11111b;
    margin-bottom: 2px;
}

#input image {
    color: #cdd6f4;
}

#input:focus {
    border: 1px solid #89b4fa;
}

#inner-box {
    margin: 4px;
    border: none;
    background-color: #1e1e2e;
    border-radius: 8px;
}

#outer-box {
    margin: 0px;
    border: none;
    border-radius: 8px;
    background-color: #1e1e2e;
}

#scroll {
    margin-top: 5px;
    border: none;
    border-radius: 8px;
    margin-bottom: 5px;
    background-color: #1e1e2e;
}

#img:selected {
    background-color: #89b4fa;
    border-radius: 8px;
}

#text:selected {
    color: #11111b;
    margin: 0px 0px;
    border: none;
    border-radius: 8px;
    background-color: #89b4fa;
}

#entry {
    margin: 4px 0px;
    border: none;
    border-radius: 8px;
    background-color: transparent;
}

#entry:selected {
    margin: 4px 0px;
    border: none;
    border-radius: 8px;
    background-color: #89b4fa;
}

#text {
    margin: 2px 2px;
    border: none;
    color: #cdd6f4;
    animation: none;
}

#img {
    margin: 2px 2px;
    border: none;
    animation: none;
}