# Mako configuration for Hyprland
# Generated by Ansible - DO NOT EDIT MANUALLY

# Appearance
font=JetBrains Mono 10
background-color=#1e1e2e
text-color=#cdd6f4
border-color=#89b4fa
progress-color=over #313244

# Layout
width=300
height=110
margin=10
padding=15
border-size=2
border-radius=8

# Positioning
anchor=top-right
layer=overlay

# Behavior
default-timeout=5000
ignore-timeout=1
max-visible=5
sort=-time

# Icons
icons=1
max-icon-size=48
icon-path=/usr/share/icons/Papirus-Dark

# Grouping
group-by=app-name
max-history=20

# Format
format=<b>%s</b>\n%b
markup=1

# Actions
actions=1

# Criteria
[urgency=low]
border-color=#313244
default-timeout=2000

[urgency=normal]
border-color=#89b4fa
default-timeout=5000

[urgency=high]
border-color=#f38ba8
default-timeout=0

[category=mpd]
default-timeout=2000
group-by=category