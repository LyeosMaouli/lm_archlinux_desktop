# Hyprlock configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

general {
    disable_loading_bar = true
    grace = 300
    hide_cursor = true
    no_fade_in = false
}

background {
    monitor =
    path = /usr/share/pixmaps/archlinux-logo.png
    blur_passes = 3
    blur_size = 8
}

input-field {
    monitor =
    size = 200, 50
    position = 0, -80
    dots_center = true
    fade_on_empty = false
    font_color = rgb(202, 211, 245)
    inner_color = rgb(30, 30, 46)
    outer_color = rgb(137, 180, 250)
    outline_thickness = 2
    placeholder_text = <i>Input Password...</i>
    shadow_passes = 2
}

label {
    monitor =
    text = Hi there, {{ desktop_user }}
    color = rgba(200, 200, 200, 1.0)
    font_size = 25
    font_family = JetBrains Mono
    position = 0, 160
    halign = center
    valign = center
}

label {
    monitor =
    text = $TIME
    color = rgba(200, 200, 200, 1.0)
    font_size = 55
    font_family = JetBrains Mono
    position = 0, 300
    halign = center
    valign = center
}