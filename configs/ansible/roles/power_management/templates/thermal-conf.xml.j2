<?xml version="1.0"?>
<!-- Thermal management configuration -->
<!-- Generated by Ansible for {{ ansible_hostname }} -->

<ThermalConfiguration>
  <Platform>
    <Name>{{ thermal_platform_name | default('Generic Laptop') }}</Name>
    <ProductName>{{ ansible_product_name | default('Unknown') }}</ProductName>
    <Preference>{{ thermal_preference | default('QUIET') }}</Preference>
    <ThermalZones>
      <ThermalZone>
        <Type>cpu</Type>
        <TripPoints>
          <TripPoint>
            <SensorType>cpu</SensorType>
            <Temperature>{{ thermal_cpu_passive | default('70000') }}</Temperature>
            <type>passive</type>
            <CoolingDevice>
              <index>1</index>
              <type>rapl_controller</type>
              <influence>{{ thermal_cpu_influence | default('100') }}</influence>
              <SamplingPeriod>{{ thermal_sampling_period | default('1') }}</SamplingPeriod>
            </CoolingDevice>
          </TripPoint>
          <TripPoint>
            <SensorType>cpu</SensorType>
            <Temperature>{{ thermal_cpu_critical | default('90000') }}</Temperature>
            <type>critical</type>
          </TripPoint>
        </TripPoints>
      </ThermalZone>
    </ThermalZones>
  </Platform>
</ThermalConfiguration>