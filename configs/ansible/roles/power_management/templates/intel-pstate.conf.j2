# Intel P-State driver configuration
# Generated by Ansible for {{ ansible_hostname }}

# Enable Intel P-State driver
options intel_pstate disable={{ '1' if intel_pstate_disable | default(false) else '0' }}

# P-State operation mode
{% if intel_pstate_mode is defined %}
options intel_pstate mode={{ intel_pstate_mode }}
{% endif %}

# Hardware P-States
{% if intel_pstate_hwp_only is defined %}
options intel_pstate hwp_only={{ '1' if intel_pstate_hwp_only else '0' }}
{% endif %}

# Maximum performance state
{% if intel_pstate_max_perf_pct is defined %}
options intel_pstate max_perf_pct={{ intel_pstate_max_perf_pct }}
{% endif %}

# Minimum performance state  
{% if intel_pstate_min_perf_pct is defined %}
options intel_pstate min_perf_pct={{ intel_pstate_min_perf_pct }}
{% endif %}