# systemd sleep configuration
# Generated by Ansible for {{ ansible_hostname }}

[Sleep]
# Suspend mode
SuspendMode={{ sleep_suspend_mode | default('mem') }}
SuspendState={{ sleep_suspend_state | default('mem standby freeze') }}

# Hibernation mode  
HibernateMode={{ sleep_hibernate_mode | default('platform shutdown') }}
HibernateState={{ sleep_hibernate_state | default('disk') }}

# Hybrid sleep mode
HybridSleepMode={{ sleep_hybrid_mode | default('suspend platform shutdown') }}
HybridSleepState={{ sleep_hybrid_state | default('disk') }}

# Suspend-then-hibernate
{% if sleep_suspend_then_hibernate | default(false) %}
HibernateDelaySec={{ sleep_hibernate_delay | default('2h') }}
{% endif %}