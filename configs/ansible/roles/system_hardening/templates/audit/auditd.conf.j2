# Audit daemon configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Log file location
log_file = {{ audit_log_file }}

# Log format (RAW or NOLOG)
log_format = RAW

# Log file permissions
log_group = root

# Priority boost
priority_boost = 4

# Flush frequency
flush = INCREMENTAL_ASYNC

# Frequency of explicit flushes
freq = 50

# Maximum log file size (MB)
max_log_file = {{ audit_max_log_file }}

# Number of log files to keep
num_logs = {{ audit_num_logs }}

# Action when log file reaches max size
max_log_file_action = ROTATE

# Space left on disk (MB)
space_left = 75

# Action when space is low
space_left_action = SYSLOG

# Space left for admin (MB)
admin_space_left = 50

# Action when admin space is low
admin_space_left_action = SUSPEND

# Disk full action
disk_full_action = SUSPEND

# Disk error action
disk_error_action = SUSPEND

# Use libwrap for connection control
use_libwrap = yes

# TCP listen port
tcp_listen_port = 60

# TCP listen queue
tcp_listen_queue = 5

# TCP max connections per IP
tcp_max_per_addr = 1

# TCP client ports
tcp_client_ports = 1024-65535

# TCP client max idle time
tcp_client_max_idle = 0

# Enable Kerberos
enable_krb5 = no

# Kerberos principal
krb5_principal = auditd

# Kerberos key file
#krb5_key_file = /etc/audit/audit.key

# Distribution
distribute_network = no